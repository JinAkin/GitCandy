@model String[]

@{
    var controller = ViewData.ModelMetadata.AdditionalValues["Controller"] as String;
}

@for (var i = 0; i < Model.Length; i++)
{
    var ss = Model[i].Split("@");
    if (i != 0)
    {<text> , </text>}
    @Html.ActionLink(ss[1], "Tree", controller, new { owner = ss[0], name = ss[1] }, null)
}